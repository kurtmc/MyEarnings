<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".PreferencesActivity"
              android:orientation="vertical">


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="top">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="left|center_vertical|top" android:rowCount="10"
                android:columnCount="3" android:orientation="vertical"
                android:visibility="visible"
                android:useDefaultMargins="false"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:id="@+id/textView"
                    android:layout_gravity="left"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextName" android:layout_gravity="center_horizontal|top"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_period"
                    android:id="@+id/textView4" android:layout_gravity="left|center_vertical"
                    />
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly"
                        android:id="@+id/radioButtonWeekly" android:checked="false" android:layout_gravity="left|center_vertical"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fortnightly"
                        android:id="@+id/radioButtonFortnightly" android:layout_gravity="left|center_vertical" android:checked="false"/>
                <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/monthly"
                        android:id="@+id/radioButtonMonthly" android:checked="false"
                        android:visibility="invisible"/>
            </RadioGroup>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/tax_code"
                    android:id="@+id/textView2" android:layout_gravity="left|center_vertical" android:layout_weight="0.09"
                    />
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
                    >
                <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m"
                        android:id="@+id/radioButtonM" android:checked="false"/>
                <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/me"
                        android:id="@+id/radioButtonME" android:checked="false"/>
                <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ml"
                        android:id="@+id/radioButtonML" android:checked="false"/>
            </RadioGroup>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kiwi_saver"
                    android:id="@+id/textView3" />
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
                    >
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none"
                        android:id="@+id/radioButtonKSNone" android:checked="false"/>

                <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonVaribaleKS"
                        android:checked="false"/>
            </RadioGroup>

            <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarKiwiSaver"
                    android:layout_gravity="left|center_vertical"/>

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sl"
                    android:id="@+id/checkBoxSL" android:layout_gravity="left|center_vertical" android:checked="false"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_rate"
                    android:id="@+id/textView5" />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editTextPayRate" android:layout_gravity="fill_horizontal|left" />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/buttonSave" android:layout_gravity="fill_horizontal|center_vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>